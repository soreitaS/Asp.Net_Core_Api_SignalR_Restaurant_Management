@model List<ResultSliderDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Öne Çıkanlar</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Öne Çıkanlar Listesi</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							Öne çıkanlar ile ilgili işlemleri aşağıdan gerçekleştirebilirsiniz. Lütfen sadece <strong>1</strong>adet öne çıkan bilgisi yazınız.
						</div>
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">Başlık1</th>
									<th scope="col">Başlık2</th>
									<th scope="col">Başlık3</th>
									<th scope="col">Açıklama1<th>
									<th scope="col">Açıklama2</th>
									<th scope="col">Açıklama3</th>
									<th scope="col">Sil</th>
									<th scope="col">Güncelle</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									<tr>
										<td>@item.Title1</td>
										<td>@item.Title2</td>
										<td>@item.Title3</td>
										<td>@item.Description1</td>
										<td>@item.Description2</td>
										<td>@item.Description3</td>
										<td><a href="/Slider/DeleteSlider/@item.SliderID" class="btn btn-outline-danger">Sil</a></td>
										<td><a href="/Slider/UpdateSlider/@item.SliderID" class="btn btn-outline-success">Güncelle</a></td>
									</tr>
								}
							</tbody>
						</table>
						<a href="/Slider/CreateSlider/" class="btn btn-outline-info">Yeni Öne Çıkan Girişi</a>
					</div>
				</div>
			</div>

		</div>
	</div>
</div>


